<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <h1>Hello, world!</h1>
    <!-- Temperature of other cities--> 
    <% if(locals.delhiWeather && locals.moscowWeather && locals.londonWeather && locals.tokyoWeather 
    &&nyWeather
    ){ %>
<h2 class="display-6 text-center mb-4">Weather of common cities</h2>
<div class="table-responsive">
  <table class="table text-center">
    <thead>
      <tr>
        <th style="width: 22%;">City</th> 
        <th style="width: 22%;">Weather</th>
        <th style="width: 22%;">Temperature</th>
        <th style="width: 22%;">Humidity</th>
        <th style="width: 22%;">Wind speed</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row" class="text-start"><%= delhiWeather.name %></th>
        <td><%= delhiWeather.weather[0].main %></td>
        <td>
          <%= Math.round(delhiWeather.main.temp-273.15) %>&#8451
        </td>
        <td><%= delhiWeather.main.humidity %>%</td>
        <td><%=delhiWeather.wind.speed %> m/s</td>
        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
      <tr>
      <th scope="row" class="text-start"><%= moscowWeather.name %></th>
      <td><%= moscowWeather.weather[0].main %></td>
      <td><%= Math.round(moscowWeather.main.temp-273.15) %>&#8451</td>
      <td><%= moscowWeather.main.humidity %>%</td>
      <td><%= moscowWeather.wind.speed %> m/s</td>
      <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
    </tbody>
    <tbody>
      <tr>
        <th scope="row" class="text-start"><%= londonWeather.name %></th>
        <td><%= londonWeather.weather[0].main %></td>
        <td><%= Math.round(londonWeather.main.temp-273.15) %>&#8451</td>
        <td><%= londonWeather.main.humidity %>%</td>
        <td><%= londonWeather.wind.speed %> m/s</td>
        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
      <tr>
        <th scope="row" class="text-start"><%= tokyoWeather.name %> </th>
        <td><%= tokyoWeather.weather[0].main %></td>
        <td><%= Math.round(tokyoWeather.main.temp-273.15) %>&#8451</td>
        <td><%= tokyoWeather.main.humidity %>%</td>
        <td><%= tokyoWeather.wind.speed %> m/s</td>
        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
      <tr>
        <th scope="row" class="text-start"  name="New York">New York</th>
        <td><%= nyWeather.weather[0].main %></td>
        <td><%= Math.round(nyWeather.main.temp-273.15) %>&#8451</td>
        <td><%= nyWeather.main.humidity %>%</td>
        <td><%= nyWeather.wind.speed %> m/s</td>
        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
      <tr>
        <th scope="row" class="text-start">Beijing</th>
        <td><%= beijingWeather.weather[0].main %></td>
        <td><%= Math.round(beijingWeather.main.temp-273.15) %>&#8451</td>
        <td><%= beijingWeather.main.humidity %>%</td>
        <td><%= beijingWeather.wind.speed %> m/s</td>
        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
      </tr>
    </tbody>
  </table>
<% } %>
<% if(locals.error){ %>
<div id="tag-error" class="tag-error"> 
  <%=error%>
</div> 
<% } %>  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>